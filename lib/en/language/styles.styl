.wrapper 
	margin-top 25%
	margin-bottom 5%
	padding 0
h2
	color white
	font-family titlefont
	font-size 2.5rem
	font-weight lighter
	text-align center
	text-shadow rgba(0,0,0,.3) -2px 4px 0
	margin 0
	padding .3rem
.black 
	background-color black
.orange
	background-color #ff6b00
.boldTitle
	font-family techni
	font-size 2.7rem
.bcontainer
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-around
	margin-bottom 1.2rem

@media screen and (min-width: 600px)
	.wrapper 
		margin-top 20%
	h2
		font-size 4.5rem
	.boldTitle
		font-size 4.7rem
@media screen and (min-width: 768px)
	.wrapper
		margin-top 15%
	h2
		font-size 6rem
	.boldTitle
		font-size 6.2rem
@media screen and (min-width: 1024px)
	.wrapper
		margin-top 8%
		padding 0
	h2
		font-size 7rem
	.boldTitle
		font-size 7.2rem